<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MAUIStar.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MAUIStar"
    xmlns:Views="clr-namespace:MAUIStar.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Product List"
        ContentTemplate="{DataTemplate Views:ProductListPage}"
        Route="ProductListPage" />

    <ShellContent
        Title="Simple Calculator"
        ContentTemplate="{DataTemplate Views:SimpleCalculator}"
        Route="SimpleCalculator" />

    <ShellContent
        Title="Photos List"
        ContentTemplate="{DataTemplate Views:PhotosListPage}"
        Route="PhotosListPage" />

    <ShellContent
        Title="DI Demo"
        ContentTemplate="{DataTemplate Views:DependencyDemoPage}"
        Route="DependencyDemoPage" />

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate Views:LoginPage}"
        Route="LoginPage" />


</Shell>
